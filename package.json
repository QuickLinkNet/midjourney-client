{
  "name": "typescript-minimal",
  "version": "1.0.0",
  "description": "Minimales TypeScript-Projekt mit Hot Reload",
  "main": "src/index.js",
  "scripts": {
    "start": "concurrently \"tsc -w -outDir ./dist\" \"serve dist\"",
    "dev": "tsc -w && nodemon src/index.js",
    "watch": "tsc -w --watchFile fixedpollinginterval"
  },
  "devDependencies": {
    "nodemon": "^2.0.15",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "concurrently": "^8.2.2"
  }
}
